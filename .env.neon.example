# Neon PostgreSQL Database Configuration
# Copy this to .env.local and fill in your Neon connection string

# Get your connection string from: https://console.neon.tech
# Format: postgresql://[user]:[password]@[endpoint]/[database]?sslmode=require
DATABASE_URL="postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech/wp-instant-tw?sslmode=require"

# Alternative name (both work)
NEON_DATABASE_URL="postgresql://user:password@ep-xxx-xxx.region.aws.neon.tech/wp-instant-tw?sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL="https://wp.instant.tw"
NEXTAUTH_SECRET="your-random-secret-here-generate-with-openssl-rand-base64-32"

# OAuth Providers (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-secret"

# Stripe Configuration (Phase 2)
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Stripe Price IDs (create products in Stripe Dashboard)
# WP Scan Pro - $19/month, $190/year
STRIPE_PRICE_PRO_MONTHLY="price_xxx"
STRIPE_PRICE_PRO_YEARLY="price_xxx"

# WP Scan Agency - $99/month, $990/year
STRIPE_PRICE_AGENCY_MONTHLY="price_xxx"
STRIPE_PRICE_AGENCY_YEARLY="price_xxx"

# WP Scan Enterprise - $299/month, $2990/year
STRIPE_PRICE_ENTERPRISE_MONTHLY="price_xxx"
STRIPE_PRICE_ENTERPRISE_YEARLY="price_xxx"

# WPVulnDB API (optional)
WPVULNDB_API_TOKEN="your-wpscan-api-token"

# Phase 3: Automated Scans & Email Notifications
# Cron job secret (generate with: openssl rand -base64 32)
CRON_SECRET="your-random-secret-here"

# Email Provider (choose: resend or sendgrid)
EMAIL_PROVIDER="resend"

# Resend (recommended) - Get from: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxxxxxxxxx"
EMAIL_FROM="WP Scan <noreply@instant.tw>"

# SendGrid (alternative) - Get from: https://app.sendgrid.com/settings/api_keys
# SENDGRID_API_KEY="SG.xxxxxxxxxxxx"
# EMAIL_FROM="noreply@instant.tw"
