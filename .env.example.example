# -------------------------
# Email Service (for authentication emails)
# -------------------------
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@wp.instant.tw
EMAIL_FROM_NAME=Instant WordPress

# Alternative: SendGrid
# SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxx

# Alternative: Mailgun
# MAILGUN_API_KEY=xxxxxxxxxxxxxxxxxxxxx
# MAILGUN_DOMAIN=mg.instant.tw

# -------------------------
# Social Authentication (Optional)
# -------------------------
# Google OAuth
GOOGLE_CLIENT_ID=xxxxxxxxxx-xxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitHub OAuth
GITHUB_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
GITHUB_CLIENT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# -------------------------
# Web Scan API
# -------------------------
WEB_SCAN_API_KEY=your-api-key-here
WEB_SCAN_API_URL=https://api.webscan.instant.tw
NEXT_PUBLIC_WEB_SCAN_API_URL=https://api.webscan.instant.tw

# -------------------------
# DirectAdmin Integration
# -------------------------
DIRECTADMIN_URL=https://server.instant.tw:2222
DIRECTADMIN_USERNAME=admin
DIRECTADMIN_PASSWORD=your-directadmin-password
DIRECTADMIN_API_KEY=your-api-key-if-using-token-auth

# -------------------------
# Application Configuration
# -------------------------
NEXT_PUBLIC_APP_URL=https://wp.instant.tw
NEXT_PUBLIC_APP_NAME=Instant
NEXT_PUBLIC_APP_DESCRIPTION="Premium WordPress Plugins & Services"

# -------------------------
# Redis Cache (Optional but recommended)
# -------------------------
REDIS_URL=redis://localhost:6379
# Or Redis Cloud:
# REDIS_URL=redis://username:password@redis-host:port

# -------------------------
# File Storage (Optional)
# -------------------------
# AWS S3 for plugin downloads and user files
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AWS_REGION=us-east-1
AWS_S3_BUCKET=instant-wp-downloads

# Alternative: Digital Ocean Spaces
# DO_SPACES_KEY=xxxxxxxxxxxxxxxxxxxxxx
# DO_SPACES_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
# DO_SPACES_BUCKET=instant-downloads

# -------------------------
# Analytics & Monitoring (Optional)
# -------------------------
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry Error Tracking
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# -------------------------
# Rate Limiting (Optional)
# -------------------------
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
# 900000ms = 15 minutes

# -------------------------
# Feature Flags (Optional)
# -------------------------
NEXT_PUBLIC_ENABLE_SOCIAL_AUTH=true
NEXT_PUBLIC_ENABLE_CART=true
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_HOSTING=true
NEXT_PUBLIC_ENABLE_DIRECTADMIN_INTEGRATION=true

# -------------------------
# Security
# -------------------------
# JWT Secret for additional token signing
JWT_SECRET=your-jwt-secret-for-api-tokens-min-32-chars

# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data-32-chars

# -------------------------
# Development/Debug
# -------------------------
NODE_ENV=development
# production, development, test

# Enable debug logging
DEBUG=false

# Log level
LOG_LEVEL=info
# error, warn, info, debug

# -------------------------
# Webhook URLs
# -------------------------
STRIPE_WEBHOOK_URL=https://wp.instant.tw/api/webhooks/stripe
DIRECTADMIN_WEBHOOK_URL=https://wp.instant.tw/api/webhooks/directadmin

# -------------------------
# Support & Contact
# -------------------------
SUPPORT_EMAIL=support@instant.tw
SALES_EMAIL=sales@instant.tw
ADMIN_EMAIL=admin@instant.tw

# -------------------------
# License & Download
# -------------------------
LICENSE_VALIDATION_URL=https://api.instant.tw/v1/licenses/validate
PLUGIN_DOWNLOAD_URL=https://downloads.instant.tw
PLUGIN_DOWNLOAD_EXPIRY_HOURS=24

# -------------------------
# Cron/Scheduled Tasks
# -------------------------
CRON_SECRET=your-secret-for-cron-jobs
# Used to authenticate automated cron endpoints

# -------------------------
# Third-Party Integrations
# -------------------------
# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxxxxxxxxxx

# Discord notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxxxxxxxxxx

# -------------------------
# Testing (Optional)
# -------------------------
TEST_DATABASE_URL=mysql://root:password@localhost:3306/instant_wp_test
TEST_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
TEST_STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
