{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules",
    "api-backup/**",
    "api-backup-static/**",
    "stripe.backup/**",
    "dashboard-backup/**",
    "login-backup/**",
    "server-only-features/**",
    "scripts/**",
    "app/api/**",
    "app/api/cron/**",
    "app/api/v1/**",
    "app/api/wpscan/**"
  ]
}
